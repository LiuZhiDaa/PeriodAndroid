<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/common_25dp"
    android:paddingStart="@dimen/common_15dp"
    android:paddingEnd="@dimen/common_15dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        tools:text="Weight"
        android:textColor="@color/dialogTitleTextColor"
        android:textSize="@dimen/dialog_title_text"
        android:gravity="center"
        android:paddingTop="@dimen/dialog_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:paddingTop="@dimen/dialog_fragment_margin"
        android:paddingBottom="@dimen/dialog_fragment_margin"
        android:paddingStart="@dimen/dialog_fragment_margin"
        android:paddingEnd="@dimen/dialog_fragment_margin"
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="@color/colorPrimary"
            android:id="@+id/btn_save"
            android:background="@drawable/bt_save_backgroud"
            android:text="@string/dialog_confirm"
            style="@style/dialogButtonStyle" />
        <Space
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>