<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/miss_call_activity_margin_item_date_phone_num">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white1"
            android:textSize="@dimen/miss_call_activity_miss_call_item_time" />

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/miss_call_activity_margin"
            android:layout_toRightOf="@+id/tv_time"
            android:gravity="center"
            android:textColor="@color/white1"
            android:textSize="@dimen/miss_call_activity_miss_call_item_phone_num" />
    </RelativeLayout>

</RelativeLayout>