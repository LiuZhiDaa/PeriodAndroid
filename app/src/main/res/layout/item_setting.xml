<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcom_gradient_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/welcom_title"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/splash_text_margin_top"
        android:layout_marginBottom="@dimen/splash_text_margin_top">
    </TextView>


    <TextView
        android:layout_width="@dimen/setting_fragment_days_text_width"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/welcom_title"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/splash_text_margin_top"
        android:layout_marginBottom="@dimen/splash_text_margin_top">
    </TextView>


    <ImageView
        android:id="@+id/iv_battery_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/icon_arrow_right"
        android:layout_margin="@dimen/main_fragment_text_margin_top"/>

</RelativeLayout>