<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/et_custom_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/reminder_text_height"
        android:text="Your menstrual period is ..."
        android:textColor="@color/reminderDialogEditTextColor"
        android:layout_marginTop="@dimen/reminder_text_margin_top"
        android:layout_marginBottom="@dimen/reminder_text_margin_top"
        android:paddingLeft="@dimen/reminder_text_padding_left"
        android:maxLines="2"
        android:maxLength="60"
        android:background="@color/reminderDialogEditTextBgColor">
    </EditText>

</LinearLayout>