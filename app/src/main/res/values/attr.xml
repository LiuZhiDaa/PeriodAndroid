<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundImageView">
        <attr name="image_radius" format="dimension" />//圆角大小
        <attr name="image_shadow_radius" format="dimension" />//阴影大小
        <attr name="image_circle" format="boolean" />//是否圆形
        <attr name="image_shadow" format="boolean" />//是否阴影
        <attr name="shadow_color" format="integer"/>//阴影颜色
    </declare-styleable>

    <!--WheelView-->
    <declare-styleable name="WheelView">
        <attr name="itemVisibleNum" format="integer" />

        <attr name="textColorOuter" format="color" />
        <attr name="textSizeOuter" format="dimension" />
        <attr name="textColorCenter" format="color" />
        <attr name="textSizeCenter" format="dimension" />

        <attr name="lineColor" format="color" />

        <attr name="isLoop" format="boolean" />
        <attr name="lineSpaceingDimens" format="dimension" />

        <attr name="wheelGravity" format="enum">
            <enum name="left" value="234" />
            <enum name="center" value="354" />
            <enum name="right" value="894" />
        </attr>
    </declare-styleable>

    <!--WheelView-->
    <declare-styleable name="CircleView">
        <attr name="circleColor" format="color" />
    </declare-styleable>

    <!--tool bar-->
    <declare-styleable name="MyToolbar">
        <attr name="mytoolbar_title" format="string|reference" />
        <attr name="mytoolbar_right_text" format="string|reference" />
        <attr name="mytoolbar_left_icon" format="reference" />
        <attr name="mytoolbar_add_status_bar_height" format="reference|boolean" />
    </declare-styleable>

</resources>